<h1>Listing Performer Styles</h1>


<%= link_to 'New performer style', new_performers_style_path %>

 
<table class="table table-hover">
   <thead>
    <tr>
      <th scope="col">Performer</th>
      <th scope="col">Style</th>
    </tr>
  </thead>
 
 <tbody>
  <% @performers_styles.each do |performers_style| %>
    <tr class="table-active">
     <td><%= Performer.where("id = ?", performers_style.performer_id).pluck(:name).first%></td>
      <td><%= Style.where("id = ?", performers_style.style_id).pluck(:name).first%></td>
      <td><%= link_to 'Show', performers_style_path(performers_style) %></td>
      <td><%= link_to  'Edit', edit_performers_style_path(performers_style) %>
      <td><%= link_to  'Destroy', performers_style_path(performers_style), method: :delete,
      data: { confirm: "Are you sure? NOTE: This will delete all dependent Festivals and data dependent on them!"} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

